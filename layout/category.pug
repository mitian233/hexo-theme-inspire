extends includes/layout.pug

block content
  #primary.content
    article#post.post.type-post.status-publish.format-standard.has-post-thumbnail.hentry
      header.entry-header
        #category
          h1.title(itemprop='name')= page.category
          - page.posts.each(function(article){
            .category-item
              a(href=url_for(article.path))= article.title
              time(datetime=date_xml(article.date))= date(article.date)
          - })
  #paginator!= paginator()
